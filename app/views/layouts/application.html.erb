<!DOCTYPE html>
<html>
  <head>
  <title>RailsChoreChart</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Rails Chore Chart</a>
        </div>

        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="#">Page 1</a></li>
          <li><a href="#">Page 2</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><a href="/user/<%= current_user.id %>"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
            <li><a href="/users/sign_out" method="POST"><span class="glyphicon glyphicon-log-out"></span> Sign Out</a></li>
          <% else %>
            <li><a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-out"></span>Sign In</a></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
