<!-- Short user info for friends and team member box-->
<div class="well">
  <%= user.name %>
  <br>
  <%= user.current_team.name %>

  <% if !current_user.friends_with(user) %>
    <%= button_to "Friend Request", { controller: "friendships", action: "create", id: user.id }, method: :post %>
  <% end %>
</div>
